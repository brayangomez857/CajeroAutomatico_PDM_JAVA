<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#504F3B"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvtitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="CAJERO AUTOMATICO"
            android:textColor="#FFFFFF"
            android:textSize="24sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etvalorconsignar"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="0"
            android:textSize="18sp">

        </EditText>

        <TextView
            android:id="@+id/tvconsignar"
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="                                                 CONSIGNAR"
            android:textAlignment="center"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etvalorretirar"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="0">

        </EditText>

        <TextView
            android:id="@+id/tvretirar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="                                         RETIRAR"
            android:textAlignment="center"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnverificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERIFICAR" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="SALARIO ACTUAL"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvtotalsaldo"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvmensaje"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Mensaje: " />


</LinearLayout>